{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "jsx": "preserve",
        "paths": {
            "~/*": ["src/*"],
            "*": ["node_modules/@types/*", "src/types/*"]
        },
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts*", "src/**/*.js*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.js", "src/types"]
}
